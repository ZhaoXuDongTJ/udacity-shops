/* pages/review-edit/review-edit.wxss */
page {
  height: 100%;
  background-color: gainsboro;
}

.container {
  height: 100%;
}

.input {
  width: 100%;
  height: 100%;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin: 20px 20px 0px 20px;
}
   
movie-card {
  flex: 1;
  width: 100%;
}

.fa {
  font-size: 1rem;
  margin-right: 4px;
  vertical-align: middle;
  line-height: normal;
}

.buttons {
  margin: 20px;
}

.recording {
  display: block;
  margin: 20px;
}

.view-button, 
.stop-record {
  font-size: 0.8em;
  color: rgb(124, 151, 172);
  display: flex;
  border: 1px solid rgb(207, 207, 207);
  padding: 8px;
  padding-right: 16px;
  padding-left: 16px;
  border-radius: 8px;
  text-align: center;
}

.record {
  display: flex;
  flex: 1;
  align-items: center;
}

.back-btn {
  border-top: 1px solid rgb(207, 207, 207);
  width: 100%;
  background-color: rgb(17, 187, 5);
  color: white;
  padding: 10px;
  text-align: center;
}

.auth-view {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.auth-text,
.login-btn {
  margin: 20px;
}