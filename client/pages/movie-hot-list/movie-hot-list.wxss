  page {
    height: 100%;
    background-color: rgb(248, 248, 248);
  }

  .list-item {
    display: flex;
    flex: 1;
    height: 300rpx;
    width: 90%;
    margin: 20rpx;
    flex-direction: row-reverse;
    justify-content: center;
    border: 1px solid rgb(207, 207, 207);
    margin-bottom: 40rpx;
  }

  .description {
    height: 100%;
    flex: 4;
    margin: 20rpx;
    margin-left: 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
  }

  .title {
    font-size: 38rpx;
    font-weight: bold;
  }

  .category {
    font-size: 32rpx;
  }

  .poster {
    height: 100%;
    flex: 2;
  }
