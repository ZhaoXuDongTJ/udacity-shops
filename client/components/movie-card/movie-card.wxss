/* movie-card.wxss */
page {
    height: 100%;
    background-color: gainsboro;
  }
  
  .container {
    height: 100%;
  }
  
  .card {
    height: 100%;
    width: 100%;
    background-color: rgb(248, 248, 248);
    display: grid;
    grid-template-columns: 1fr 150px 1fr;
    grid-template-rows: 185px repeat(3, 1fr) 20px;
  }
  
  .card-image {
    grid-column: 2 / 3;
    grid-row: 1 / 2;
    order: 2;
    margin: 10px;
  }
  
  .movie-image {
    height: 100%;
    width: 100%;
    border-radius: 8px;
    border: 1px solid rgb(207, 207, 207);
  }
  
  .card-background {
    background-color: white;
    border: 1px solid rgb(207, 207, 207);
    grid-column: 1 / -1;
    grid-row: 1 / -2;
    margin: 20px;
    margin-top: 40px;
    margin-bottom: 0;
    padding: 10px;
    border-radius: 8px;
  }
  
  .card-description {
    display: flex;
    flex-direction: column;
    align-items: center;
    grid-column: 1 / -1;
    grid-row: 2 / -2;
    margin: 40px;
    margin-top: 20px;
    margin-bottom: 0;
  }
  
  .title {
    display: block;
    font-size: 38rpx;
    font-weight: bold;
  }
  
  .description {
    line-height: 1.5em;
    font-size: 0.8em;
    overflow:hidden;
    flex: 1;
    margin-top: 20px;
  }
  
  .buttons {
    width: 100%;
    display: flex;
    justify-content: space-around;
    margin: 20px;
  }
  
  .view-button, 
  .add-button {
    font-size: 0.8em;
    color: rgb(124, 151, 172);
    display: flex;
    border: 1px solid rgb(207, 207, 207);
    padding: 8px;
    padding-right: 16px;
    padding-left: 16px;
    border-radius: 8px;
    text-align: center;
  }
  
  .fa {
    font-size: 1rem;
  }
  
