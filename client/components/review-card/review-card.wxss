/* components/review-card/review-card.wxss */
.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin: 20px 20px 0px 20px;
}
   
movie-card {
  height: 100%;
  width: 100%;
}

.review {
  display: flex;
  flex: 1;
  width: 100%;
}

.placeholder {
  font-size: 2rem;
  font-weight: bold;
  color: black;
  margin-left: 20px;
  margin-right: 20px;
}


person-info {
  align-self: flex-start;
}

.description {
  line-height: 1.5em;
  font-size: 1rem;
  overflow:hidden;
  flex: 1;
}